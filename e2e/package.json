{
    "name": "e2e",
    "version": "1.0.0",
    "author": "Egor Makarenko",
    "license": "MIT",
    "engines": {
        "node": ">=12.0.0"
    },
    "scripts": {
        "postinstall": "npm install --prefix=../client && npm install --prefix=../server",
        "start:client": "npm run start --prefix=../client",
        "start:server": "npm run start --prefix=../server",
        "test": "echo \"Run either 'npm run test:cypress' or 'npm run test:playwright'\"",
        "test:cypress": "start-server-and-test start:server 3000/api start:client 4200 cypress:run",
        "test:cypress:dev": "start-server-and-test start:server 3000/api start:client 4200 cypress:open",
        "test:playwright": "start-server-and-test start:server 3000/api start:client 4200 playwright:run",
        "test:playwright:dev": "start-server-and-test start:server 3000/api start:client 4200 playwright:open",
        "test:wdio": "start-server-and-test start:server 3000/api start:client 4200 wdio",
        "test:selenoid": "start-server-and-test start:server 3000/api start:client 4200 wdio:selenoid",
        "cypress:open": "cypress open",
        "cypress:run": "cypress run",
        "playwright:open": "playwright test --config ./playwright",
        "playwright:run": "playwright test --config ./playwright",
        "wdio": "wdio run ./webdriverio/wdio.conf.ts",
        "wdio:selenoid": "ip route get 1 | sed -nE 's/.*src ([0-9.]+).*/http:\\/\\/\\1:4200/p' | xargs -I{} wdio run ./webdriverio/wdio-selenoid.conf.ts --baseUrl {}",
        "local-ip": "ip route get 1 | sed -nE 's/.*src ([0-9.]+).*/\\1/p'",
        "baseurl": "npm run --silent local-ip | sed 's/.*/http:\\/\\/&:4200/'"
    },
    "devDependencies": {
        "@playwright/test": "^1.16.3",
        "@types/jsonwebtoken": "^8.5.5",
        "@typescript-eslint/eslint-plugin": "^5.18.0",
        "@typescript-eslint/parser": "^5.3.0",
        "@wdio/allure-reporter": "^7.16.11",
        "@wdio/cli": "^7.16.12",
        "@wdio/local-runner": "^7.16.12",
        "@wdio/mocha-framework": "^7.16.11",
        "@wdio/spec-reporter": "^7.16.11",
        "axe-core": "^4.3.5",
        "axios": "^0.24.0",
        "cypress": "^9.0.0",
        "cypress-localstorage-commands": "^1.6.0",
        "dotenv": "^10.0.0",
        "eslint": "^8.2.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-cypress": "^2.12.1",
        "eslint-plugin-node": "^11.1.0",
        "eslint-plugin-prettier": "^4.0.0",
        "start-server-and-test": "^1.14.0",
        "ts-node": "^10.4.0",
        "typescript": "^4.5.4",
        "webdriverio": "^7.16.12"
    }
}
